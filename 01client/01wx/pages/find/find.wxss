

.header{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
   background: linear-gradient(to right, rgb(10, 185, 240) ,rgb(104, 185, 240) , rgb(140, 180, 250)); 
}
.header .title{
    width:45%;
    height: 180rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    padding: 15rpx;  
}

.header .title {
  width: 45%;
  height: 180rpx;
  margin: 15rpx 0;
  padding: 15rpx;
}

.header  image {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
}

.headerBox {
  width: 700rpx;
  white-space: nowrap;
}

.headerItem {
  display: inline-block;
  padding: 0 40rpx;
}

.headerItemView {
  display: flex;
  flex-direction: column;
  height: 75rpx;
  justify-content: space-between;
  align-items: center;
  margin-top: 15rpx;
}

.title {
  color: #555;
  font-size: 33rpx;
}

.titleSelect {
  color: #21aaff;
  font-size: 37rpx;
}

.line {
  width: 50%;
  height: 10rpx;
  background: #21aaff;
  border-radius: 5rpx;
}

.divider {
  width: 750rpx;
  height: 8rpx;
  background: #dbe2f3;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 222rpx;

}

.item_left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 240rpx;
  height: 200rpx;

}

.item_right {
  width: 340rpx;
  height: 200rpx;

}

.item_right image {
  width: 100%;
  height: 100%;
}

.top {
  font-size: 25rpx;
  color: #000;
}

.bottom {
  font-size: 25rpx;
  color: #525252;
}

.ti {
  position: absolute;
  display: none;
}

.tt {
  display: block;
  position: absolute;
}
