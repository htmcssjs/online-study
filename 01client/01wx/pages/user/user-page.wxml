<!--index.wxml-->
<view class="container">
  <view class="head">
    <view>
      <image class='first-img' bindtap="chooseImage" src='{{tempFilePaths}}'></image>
    </view>
    <view class="head-second-1">
      <view class="head-name">{{userName}}</view>
      <image class="head-icon-change" bindtap="changeName" src="../../imgs/user/修改.png"></image>
    </view>
  </view>
  <view class="modelBox" catchtouchmove='preventTouchMove' wx:if='{{showModal}}'></view>
  <view class="modalChange" catchtouchmove='preventTouchMove' wx:if='{{showModal}}'>
    <view class='windowRow'>
      <text class='userTitle'>修改名称</text>
    </view>
    <view class='newName'>
      <input bindinput='newNameInput' placeholder=' {{userName}}' class='newName-input'></input>
    </view>
    <view class='modelButtonBox'>
      <view class='modelButton modelButton-yes' bindtap='ok'>确定</view>
      <view class='modelButton modelButton-back' bindtap='back'>返回</view>
    </view>
  </view>

  <view class="course">
    <view class="course-first">
      <view class="course-first course-first-my">我的课程</view>
      <view>查看全部
        <image class="course-first-img" src='../../imgs/user/方向1.png'></image>
      </view>
    </view>
    <view class="course-second">
      <view class="first">
        <image class="course-first-img" src='../../imgs/user/播放.png'></image>
        继续观看
      </view>
    </view>
  </view>
  <view class="management">
    <navigator url="/pages/download/download" open-type="navigateTo">
      <view class="management-text">
        <view class="first">
          <view>
            <image class="management-text-img1" src='../../imgs/user/下载.png'></image>
          </view>
          <view>下载管理</view>
        </view>
        <view>
          <image class="management-text-img2" src='../../imgs/user/方向2.png'></image>
        </view>
      </view>
    </navigator>

    <navigator url="/pages/wrong/wrong" open-type="navigateTo">
      <view class="management-text">
        <view class="first">
          <view>
            <image class="management-text-img1" src='../../imgs/错题.png'></image>
          </view>
          <view class="tool">
            我的错题
          </view>
        </view>
        <view>
          <image class="management-text-img2" src='../../imgs/方向2.png'></image>
        </view>
      </view>
    </navigator>

    <navigator url="/pages/favorite/favorite" open-type="navigateTo">
      <view class="management-text">
        <view class="first">
          <view>
            <image class="management-text-img1" src='../../imgs/五角星.png'></image>
          </view>
          <view class="tool">我的收藏</view>
        </view>
        <view>
          <image class="management-text-img2" src='../../imgs/方向2.png'></image>
        </view>
      </view>
    </navigator>

  </view>
</view>