.container {
  display: flex;
  flex-direction: column;
  justify-content: top;
  width: 750rpx;
  height: 1000rpx;
}

/**
* 编辑栏
*/
.download-topBar {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  margin-bottom: 40rpx;
}
.download-topBar .edit {
  margin-right: 20rpx;
  height: 50rpx;
  padding: 0 15rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #999;
}

/**
* 列表
*/
.download-listBox {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.download-list-item {
  width: 700rpx;
  height: 180rpx;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.download-list-item .img {
  width: 300rpx;
  height: 180rpx;
}
.download-list-item .inforBox {
  width: 360rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.download-inforTitleBox{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100rpx;
}

.download-inforTitleBox .title {
  color: #333;
  font-size: 36rpx;
}

.download-inforTitleBox .cast {
  color: #999;
  font-size: 26rpx;
}

.download-infor-rightBox {
  margin-top: 20rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.download-infor-rightBox .datasize {
  color: #999;
  font-size: 26rpx;
}

.download-infor-rightBox .deleteButton {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.gou{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
}