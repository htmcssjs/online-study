.headr{
  width: 750rpx;
  margin-bottom: 30rpx;
}
.headr image{
  height:100%;
}
.examinationView {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.title {
  color: #111;
  font-size: 40rpx;
  font-weight: bold;
  margin:10rpx;
}

.examinationView .item {
  display: flex;
  flex-direction: row;
}

.examinationView .item .icon {
  width: 300rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-top: 15rpx;
}

.inforBox{
  padding-left: 20rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.inforBox .inforTitle{
  color: #111;
  font-size: 30rpx;
  font-weight: bold;
}

.inforBox .content{
  color: #979292;
  margin-top: 28rpx;
  font-size: 32rpx;
}

.body{
  margin:  0 auto;
 
   display: flex;
